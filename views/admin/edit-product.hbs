
    <div class="container">
        <div class="row">

        <div class="col-md-6">
            <h2>Edit Product</h2>
            <form action="/admin/edit-product/{{product._id}}" method="post" enctype="multipart/form-data">
            <label for="formGroupExampleInput"   class="form-label">Name</label>
            <input type="text" name="Name" class="form-control" value="{{product.Name}}">

            <label for="" class="form-label">Category</label>
            <input type="text" name="Category" class="form-control" value="{{product.Category}}">

            <label for="" class="form-label">Price</label>
            <input type="text" name="Price" class="form-control" value="{{product.Price}}">

            <label for="" class="form-label">Image</label>
            <img src="/product-images/{{product._id}}.jpg" alt="" style="width: 100px; height:auto;" id="imvew">
            <input type="file" name="Image" class="form-control" onchange="viewimage(event)">

            <button type="submit" class="btn btn-success">Submit</button>
        </form>
      </div>
    </div>
 </div>
<script>
  function viewimage(event){
    document.getElementById('imvew').src=URL.createObjectURL(event.target.files[0])
  }
</script>
