<section style="padding-top:6rem; background: violet;">
  <div class="container ">
    <div class="row">
      {{#each products}}
      <div class="col-md-3 p-5">
        <div class="card" style="width: 15rem; height:23rem ;">
          <img class="card-img-top" 
          src="/product-images/{{this.product._id}}.jpg"
           alt="card imgage cap" style="height: 13erm;">

          <div class="card-body">
            <h5 class="card-title">{{this.product.Name}}</h5>
            <p class="card-text">{{this.product.Price}}</p>
            <p class="card-text">Quantity:{{this.quantity}}</p>
          </div>
        </div>
      </div>
      {{/each}}
    </div>
  </div>
</section>