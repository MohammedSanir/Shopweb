<section style="background:seashell; padding-top: 5rem;">
    <div class="container">
        <div class="col-md-12">
            <table class="table mt-4" id="orderTable">
                <thead>
                    <tr>
                        <th scope="col">Date</th>
                        <th>Address</th>
                        <th>Pincode</th>
                        <th>Mobile</th>
                        <th scope="col">Amount</th>
                        <th scope="col">Payment</th>
                        <th scope="col">Status</th>
                        <th>Optin</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each orders}}
                    <tr>
                        <td>{{this.date}}</td>
                        <td>{{this.deliveryDetails.address}}</td>
                        <td>{{this.deliveryDetails.pincode}}</td>
                        <td>{{this.deliveryDetails.mobile}}</td>
                        <td>{{this.totalAmount}}</td>
                        <td>{{this.paymentMethod}}</td>
                        <td>{{this.status}}</td>
                        <td>
                            <a href="/view-order-product/{{this._id}}" class="btn btn-primary">View Product</a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>

            </table>


        </div>
    </div>
</section>
<script>
$( function () {
    $('#orderTable').DataTable();
} );
</script>